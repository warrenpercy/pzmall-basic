<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.pz.basic.mall.dao.sys.MallProvinceDao">

    <resultMap id="ResultMap" type="MallProvince">
        <id property="id" column="id"/>
        <id property="provinceId" column="province_id" />
        <id property="provinceName" column="province_name"/>
        <id property="status" column="status"/>
        <id property="createUser" column="create_user"/>
        <id property="modifyUser" column="modify_user"/>
        <id property="created" column="created"/>
        <id property="modified" column="modified"/>
    </resultMap>

    <sql id="ALL_TABLE_COLOUM">
        id,
        province_id,
        province_name,
        status,
        create_user,
        modify_user,
        created,
        modified
    </sql>

    <sql id="Query_Where_Clause">
        <where>
            1=1

            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="provinceName != null and provinceName != ''">
                and province_name = #{provinceName}
            </if>
            <if test="status!= null and status != ''">
                and status = #{status}
            </if>
            <if test="createUser != null and createUser != ''">
                and create_user = #{createUser}
            </if>
            <if test="modifyUser != null and modifyUser != ''">
                and modify_user = #{modifyUser}
            </if>
            <if test="created != null and created != ''">
                and created = #{created}
            </if>
            <if test="modified !=null and modified != ''">
                and modified = #{modified}
            </if>

            <if test="provinceNameLike != null and provinceNameLike != ''">
                and province_name likeconcat(#{provinceNameLike},'%')
            </if>

        </where>
    </sql>

    <select id="selectMallProvinceByQuery" resultMap="ResultMap" parameterType="QueryMallProvince">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_province
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>

    </select>

    <select id="selectMallProvinceByPage" resultMap="ResultMap" parameterType="QueryMallProvince">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_province
        <if test="page != null">
            <include refid="Query_Where_Clause"/>
        </if>

        LIMIT#{startRow},#{pageSize}
    </select>

    <select id="selectMallProvinceById" resultMap="ResultMap" parameterType="java.lang.Long">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_province
        where id = #{id}
    </select>

    <delete id="deleteMallProvinceById" parameterType="java.lang.Integer">
        delete from mall_province
        where id = #{id}
    </delete>

    <delete id="deleteMallProvinceByQuery" parameterType="QueryMallProvince">
        delete from mall_province
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>
    </delete>

    <insert id="insertMallProvince" parameterType="MallProvince">
        INSERT INTO
        mall_province(id,province_id,province_name,status,create_user,modify_user,created,modified)
        VALUES(#{id},#{provinceId},#{provinceName},#{status},#{createUser},#{modifyUser},#{created},#{modified})
        <selectKey resultType="long" keyProperty="id">
            SELECT@@IDENTITY AS ID
        </selectKey>
    </insert>

    <insert id="insertMallProvinceModified" parameterType="MallProvince">
        insert into mall_province
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="provinceId != null">
                province_id
            </if>
            <if test="provinceName != null">
                province_name,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="createUser != null">
                create_user,
            </if>
            <if test="modifyUser != null">
                modify_user,
            </if>
            <if test="created != null">
                created,
            </if>
            <if test="modified != null">
                modified,
            </if>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id !=null">
                #{id},
            </if>
            <if test="provinceId != null">
                #{provinceId},
            </if>
            <if test="provinceName != null">
                #{provinceName},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="createUser != null">
                #{createUser},
            </if>
            <if test="modifyUser != null">
                #{modifyUser},
            </if>
            <if test="created!= null">
                now(),
            </if>
            <if test="modified != null">
                now(),
            </if>
        </trim>

        <selectKey resultType="long" keyProperty="id">
            SELECT@@IDENTITY AS ID
        </selectKey>
    </insert>

    <select id="countByQuery" parameterType="QueryMallProvince" resultType="java.lang.Long">
        select count(*) from mall_province
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>
    </select>

    <update id="updateMallProvinceByIdModified" parameterType="MallProvince">
        update mall_province
        <set>
            <if test="provinceName != null">
                province_name = #{provinceName},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createUser != null">
                create_user = #{createUser},
            </if>
            <if test="modifyUser != null">
                modify_user = #{modifyUser},
            </if>
            <if test="created != null">
                created = #{created},
            </if>
            <if test="modified != null">
                modified=now(),
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>