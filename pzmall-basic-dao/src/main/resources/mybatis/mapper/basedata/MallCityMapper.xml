<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.pz.basic.mall.dao.sys.MallCityDao">

    <resultMap id="ResultMap" type="MallCity">
        <id property="id" column="id"/>
        <id property="cityId" column="city_id"/>
        <id property="cityName" column="city_name"/>
        <id property="provinceId" column="province_id"/>
        <id property="status" column="status"/>
        <id property="createUser" column="create_user"/>
        <id property="modifyUser" column="modify_user"/>
        <id property="created" column="created"/>
        <id property="modified" column="modified"/>
    </resultMap>

    <sql id="ALL_TABLE_COLOUM">
        id,
        city_id,
        city_name,
        province_id,
        status,
        create_user,
        modify_user,
        created,
        modified
    </sql>

    <sql id="Query_Where_Clause">
        <where>
            1=1

            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="cityName != null and cityName != ''">
                andcity_name = #{cityName}
            </if>
            <if test="status!= null and status != ''">
                and status = #{status}
            </if>
            <if test="createUser != null and createUser != ''">
                and create_user = #{createUser}
            </if>
            <if test="modifyUser != null and modifyUser != ''">
                and modify_user = #{modifyUser}
            </if>
            <if test="created != null and created != ''">
                and created = #{created}
            </if>
            <if test="modified !=null and modified != ''">
                and modified = #{modified}
            </if>

            <if test="cityNameLike != null and cityNameLike != ''">
                and city_name like concat(#{cityNameLike},'%')
            </if>

        </where>
    </sql>

    <select id="selectMallCityByQuery" resultMap="ResultMap" parameterType="QueryMallCity">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_city
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>

    </select>

    <select id="selectMallCityByPage" resultMap="ResultMap" parameterType="QueryMallCity">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_city
        <if test="page != null">
            <include refid="Query_Where_Clause"/>
        </if>

        LIMIT#{startRow},#{pageSize}
    </select>

    <select id="selectMallCityById" resultMap="ResultMap" parameterType="java.lang.Long">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_city
        where id = #{id}
    </select>

    <delete id="deleteMallCityById" parameterType="java.lang.Integer">
        delete from mall_city
        where id = #{id}
    </delete>

    <delete id="deleteMallCityByQuery" parameterType="QueryMallCity">
        delete from mall_city
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>
    </delete>

    <insert id="insertMallCity" parameterType="MallCity">
        INSERT INTO
        mall_city(id,city_id,city_name,province_id,status,create_user,modify_user,created,modified)
        VALUES(#{id},#{cityId},#{cityName},#{provinceId},#{status},#{createUser},#{modifyUser},#{created},#{modified})
        <selectKey resultType="long" keyProperty="id">
            SELECT@@IDENTITY AS ID
        </selectKey>
    </insert>

    <insert id="insertMallCityModified" parameterType="MallCity">
        insert into mall_city
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="cityId != null">
                city_id
            </if>
            <if test="cityName != null">
                city_name,
            </if>
            <if test="provinceId != null">
                province_id,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="createUser != null">
                create_user,
            </if>
            <if test="modifyUser != null">
                modify_user,
            </if>
            <if test="created != null">
                created,
            </if>
            <if test="modified != null">
                modified,
            </if>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id !=null">
                #{id},
            </if>
            <if test="cityId != null">
                #{cityId},
            </if>
            <if test="cityName != null">
                #{cityName},
            </if>
            <if test="provinceId != null">
                #{provinceId},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="createUser != null">
                #{createUser},
            </if>
            <if test="modifyUser != null">
                #{modifyUser},
            </if>
            <if test="created!= null">
                now(),
            </if>
            <if test="modified != null">
                now(),
            </if>
        </trim>

        <selectKey resultType="long" keyProperty="id">
            SELECT@@IDENTITY AS ID
        </selectKey>
    </insert>

    <select id="countByQuery" parameterType="QueryMallCity" resultType="java.lang.Long">
        select count(*) from mall_city
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>
    </select>

    <update id="updateMallCityByIdModified" parameterType="MallCity">
        update mall_city
        <set>
            <if test="cityName != null">
                city_name = #{cityName},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createUser != null">
                create_user = #{createUser},
            </if>
            <if test="modifyUser != null">
                modify_user = #{modifyUser},
            </if>
            <if test="created != null">
                created = #{created},
            </if>
            <if test="modified != null">
                modified=now(),
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>