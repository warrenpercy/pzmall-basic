<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.pz.basic.mall.dao.product.property.MallPropertyDao">

    <resultMap id="ResultMap" type="MallProperty">
        <id property="propertyId" column="property_id"/>
        <id property="propertyName" column="property_name"/>
        <id property="groupId" column="group_id"/>
        <id property="features" column="features"/>
        <id property="sortOrder" column="sort_order"/>
        <id property="status" column="status"/>
        <id property="createUser" column="create_user"/>
        <id property="modifyUser" column="modify_user"/>
        <id property="created" column="created"/>
        <id property="modified" column="modified"/>
    </resultMap>

    <sql id="ALL_TABLE_COLOUM">
        property_id,
        property_name,
        group_id,
        features,
        sort_order,
        status,
        create_user,
        modify_user,
        created,
        modified
    </sql>

    <sql id="Query_Where_Clause">
        <where>
            1=1
            <if test="propertyId != null and propertyId != ''">
                and property_id = #{propertyId}
            </if>
            <if test="propertyName != null and propertyName !=''">
                and property_name = #{propertyName}
            </if>
            <if test="groupId != null and groupId != ''">
                and group_id = #{groupId}
            </if>
            <if test="features != null and features != ''">
                and features = #{features}
            </if>
            <if test="sortOrder != null and sortOrder !=''">
                and sort_order = #{sortOrder}
            </if>
            <if test="status!= null and status != ''">
                and status = #{status}
            </if>
            <if test="createUser != null and createUser != ''">
                and create_user = #{createUser}
            </if>
            <if test="modifyUser != null and modifyUser != ''">
                and modify_user = #{modifyUser}
            </if>
            <if test="created != null and created != ''">
                and created = #{created}
            </if>
            <if test="modified !=null and modified != ''">
                and modified = #{modified}
            </if>

            <if test="propertyNameLike != null and propertyNameLike != ''">
                and property_name like concat(#{propertyNameLike},'%')
            </if>
        </where>
    </sql>

    <select id="selectMallPropertyByQuery" resultMap="ResultMap" parameterType="QueryMallProperty">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_property
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>

    </select>

    <select id="selectMallPropertyByPage" resultMap="ResultMap" parameterType="QueryMallProperty">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_property
        <if test="page != null">
            <include refid="Query_Where_Clause"/>
        </if>
        LIMIT#{startRow},#{pageSize}
    </select>

    <select id="selectMallPropertyById" resultMap="ResultMap" parameterType="java.lang.Long">
        select
        <include refid="ALL_TABLE_COLOUM"/>
        from mall_property
        where property_id = #{propertyId}
    </select>

    <delete id="deleteMallPropertyById" parameterType="java.lang.Integer">
        delete from mall_property
        where property_id = #{propertyId}
    </delete>

    <delete id="deleteMallPropertyByQuery" parameterType="QueryMallProperty">
        delete from mall_property
        <if test="page!= null">
            <include refid="Query_Where_Clause"/>
        </if>
    </delete>

    <insert id="insertMallProperty" parameterType="MallProperty">
        INSERT INTO
        mall_property(property_id,property_name,group_id,features,sort_order,status,create_user,modify_user,created,modified)
        VALUES(#{propertyId},#{propertyName},#{groupId},#{features},#{sortOrder},#{status},#{createUser},#{modifyUser},#{created},#{modified})
        <selectKey resultType="long" keyProperty="propertyId">
            SELECT@@IDENTITY AS ID
        </selectKey>
    </insert>

    <insert id="insertMallPropertyModified" parameterType="MallProperty">
        insert into mall_property
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="propertyId != null">
                property_id,
            </if>
            <if test="propertyName != null">
                property_name,
            </if>
            <if test="groupId != null">
                group_id,
            </if>
            <if test="features != null">
                features,
            </if>
            <if test="sortOrder != null">
                sort_order,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="createUser != null">
                create_user,
            </if>
            <if test="modifyUser != null">
                modify_user,
            </if>
            <if test="created != null">
                created,
            </if>
            <if test="modified != null">
                modified,
            </if>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="propertyId !=null">
                #{propertyId},
            </if>
            <if test="propertyName != null">
                #{propertyName},
            </if>
            <if test="groupId != null">
                #{groupId},
            </if>
            <if test="features != null">
                #{features},
            </if>
            <if test="sortOrder != null">
                #{sortOrder},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="createUser != null">
                #{createUser},
            </if>
            <if test="modifyUser != null">
                #{modifyUser},
            </if>
            <if test="created!= null">
                now(),
            </if>
            <if test="modified != null">
                now(),
            </if>
        </trim>
        <selectKey resultType="long" keyProperty="propertyId">
            SELECT@@IDENTITY AS ID
        </selectKey>
    </insert>

    <select id="countByQuery" parameterType="QueryMallProperty" resultType="java.lang.Long">
        select count(*) from mall_property
        <if test="page != null">
            <include refid="Query_Where_Clause"/>
        </if>
    </select>

    <update id="updateMallPropertyByIdModified" parameterType="MallProperty">
        update mall_property
        <set>
            <if test="propertyName != null">
                property_name = #{propertyName},
            </if>
            <if test="groupId != null">
                group_id= #{groupId},
            </if>
            <if test="features != null">
                features = #{features},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createUser != null">
                create_user = #{createUser},
            </if>
            <if test="modifyUser != null">
                modify_user = #{modifyUser},
            </if>
            <if test="created != null">
                created = #{created},
            </if>
            <if test="modified != null">
                modified = now(),
            </if>
        </set>
        where property_id = #{propertyId}
    </update>
</mapper>